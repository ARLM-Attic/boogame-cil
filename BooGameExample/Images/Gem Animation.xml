<?xml version="1.0" encoding="utf-8" ?>
<image-animation>
  <initial-state ref="blue"/>

  <state id="green">
    <image path="Gem Green"/>

    <transitions>
      <transition ref="blue" min-seconds="0.5" max-seconds="0.5"/>
    </transitions>
  </state>

  <state id="orange">
    <image path="Gem Orange"/>

    <transitions>
      <transition ref="blue" min-seconds="0.5" max-seconds="0.5"/>
    </transitions>
  </state>

  <state id="blue">
    <image path="Gem Blue"/>

    <transitions>
      <transition ref="green" min-seconds="0.5" max-seconds="2" probability="0.5"/>
      <transition ref="orange" min-seconds="0.5" max-seconds="2"/>
    </transitions>
  </state>
</image-animation>